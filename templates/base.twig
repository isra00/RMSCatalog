<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{% if pageTitle is defined %}{{ pageTitle }} | {% endif %}{% trans %}Library Catalog{% endtrans %}</title>
	<link rel="stylesheet" href="{{ global.request.basepath }}/style.css" type="text/css" />
</head>

<body class="{{ bodyClass|default() }}">

	<header>
		<div class="inner">
			<img src="{{ global.request.basePath }}/img/SRM-white.svg" alt="RMS Tz" class="logo">
			<h2><a href="{{ global.request.basePath }}/">{% trans %}RMS Library catalog{% endtrans %}</a></h2>

			{% if app.config.showLinkELibrary %}
			<a class="e-library" href="//server.rms.tz/cops">
				<small>Go to the</small>
				E-Library
			</a>
			{% endif %}

			{% block headerSearch %}
			<form method="get" action="{{ global.request.basepath }}/search" class="search-header">
				<input name="searchBooks" type="text" placeholder="{% trans %}Search the Catalog{% endtrans %}" value="{{ global.request.get('searchBooks') }}" required>
				<button type="submit" name="send">🔍 <span>{% trans %}Search{% endtrans %}</span></button>
			</form>
			{% endblock %}
		</div>
	</header>

	{% block content %}{% endblock %}

</body>
</html>