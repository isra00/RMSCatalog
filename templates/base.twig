<!doctype html>
<html lang="{{ app.config.locale }}">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

	<title>{% if pageTitle is defined %}{{ pageTitle }} | {% endif %}{{ app.config.siteTitle }}</title>
	<link rel="stylesheet" href="{{ global.request.basepath }}/style.css" type="text/css" />
	{% if loadJSFramework is defined %}
	<script src="{{ global.request.basepath }}/zepto-1.2.0.min.js"></script>
	{% endif %}
</head>

<body class="{{ bodyClass|default() }}">

	<header>
		<div class="inner">
			<img src="{{ global.request.basePath }}/img/SRM-white.svg" alt="RMS Tz" class="logo">
			<h2><a href="{{ global.request.basePath }}/">{{ app.config.siteTitle }}</a></h2>

			{% if app.config.showLinkELibrary %}
			<a class="e-library" href="{{ app.config.showLinkELibrary }}">
				<small>Go to the</small>
				E-Library
			</a>
			{% endif %}

			{% block headerSearch %}
			<form method="get" action="{{ global.request.basepath }}/search" class="search-header">
				<input name="searchBooks" type="text" placeholder="{% trans %}Search the Catalog{% endtrans %}" value="{{ global.request.get('searchBooks') }}" pattern=".{3,}" title="{% trans %}At least 3 letters or numbers{% endtrans %}" required>
				<button type="submit" name="send">üîç <span>{% trans %}Search{% endtrans %}</span></button>
			</form>
			{% endblock %}
		</div>
	</header>

	{% block content %}{% endblock %}

</body>
</html>