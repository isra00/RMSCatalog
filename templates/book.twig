{% extends "base.twig" %}

{% block content %}

	<section class="main book-single">

		<span class="b-language">
			<img src="{{ global.request.baseUrl }}/img/flags/{{ record.flag }}.png"> {{ record.language }}
		</span>
		
		<h3 class="b-author"><a href="/author/...">{{ record.author }}</a></h3>
		<h2 class="b-title">{{ record.title }} {% if record.volume %}<span class="b-volume">(Vol. {{ record.volume }})</span>{% endif %}</h2>
		<h4 class="b-subtitle">{{ record.subtitle }}</h4>


		<ul class="book-fields">

			<li>
				<h5>Classification</h5>
				<span class="b-class">
					{{ record.class }} 
					{# <a href="">Popes</a> &rsaquo; <a href="">John Paul II</a> &rsaquo; <a href="">Apostolic Exhortations</a> #}
				</span>
			</li>

			<li class="b-year">
				<h5>Year</h5>
				{{ record.year }}
			</li>

			<li class="b-isbn">
				<h5>ISBN</h5>
				{{ record.isbn|default('Not recorded') }}
			</li>

			<li class="b-call">
				<h5>Call n.</h5>
				{{ record.call }}
			</li>

			<li class="b-exemplars">
				<h5>Exemplar</h5>
				{{ record.exemplar }}
			</li>

		</ul>

		<div class="where">
			<h6>Where to find this book</h6>
			ðŸ‘‰ Go to the <b>{{ record.section }}</b> room,<br>
			ðŸ‘‰ search the class <b>{{ record.class }}</b>, <br>
			ðŸ‘‰ then locate this label:<br>

			<div class="center">
				<div class="label label-{{ record.section|lower }}">

				{% if record.section == 'Philosophy' %}

					<small>Redemptoris<br>Mater<br>Tanzania<br></small>

					<img src="/img/SRM.svg" height="32" alt="[logo]"><br>

					{{ record.class }}<br>
					{{ record.labelLine1 }}<br>
					{{ record.labelLine2 }}<br>

				{% else %}

					<small>Redemptoris Mater</small><br>
					<img src="/img/SRM.svg" height="32" alt="[logo]"><br>
					<u>TANZANIA</u><br>

					{{ record.call }}<br>
					{{ record.class }}/B<br>
					Ex. {{ record.exemplar }}
				
				{% endif %}

				</div>
			</div>
		</div>

	</section>

{% endblock %}