{% extends "base.twig" %}

{% block headerSearch %}{% endblock %}

{% block content %}

	<section class="main">

		<form method="get" action="{{ global.request.basepath }}/search" class="search-home">
			<label for="searchBooks">{% trans with {'%n%': totalBooks} %}Search in our %n% books:{% endtrans %} </label>
			<div class="flex-container">
				<input id="searchBooks" name="searchBooks" type="text" placeholder="{% trans %}Title, subtitle, author or topic{% endtrans %}" pattern=".{3,}" title="{% trans %}At least 3 letters or numbers{% endtrans %}" required autofocus>
				<button type="submit" name="send">ğŸ” <span>{% trans %}Search{% endtrans %}</span></button>
			</div>
		</form>

		<p>{% trans %}or browse the classification:{% endtrans %}</p>
		
		<div class="book-fields home-classification">
			<ul class="b-class-tree">
				{{ classificationTree|raw }}
			</ul>
		</div>

	</section>

{% endblock %}